{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build",
        "declaration": false,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "paths": {
            "src/*": [
                "./src/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@common/*": [
                "src/common/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}